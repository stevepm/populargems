<div class="container">
  <div class="row">
    <div class="col-md-8">
      <table class="table table-striped table-bordered table-hover well">
        <thead>
        <tr>
          <th class="col-sm-3"><%= link_to @user.name, @user %>'s comments</th>
          <th class="col-sm-10">
          </th>
        </tr>
        </thead>
        <tbody id="user_comments">
        <% if @comments.size > 0 %>
          <% @comments.each do |comment| %>
            <% gem = comment.commentable %>
            <tr>
              <td><strong><%= link_to gem.name, gem %></strong></td>
              <td class="break-word"><%= comment.body.html_safe %></td>
            </tr>
          <% end %>
        <% else %>
          <tr class="info">
            <td><strong>You haven't left any comments yet!</strong></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate(@comments) %>
    </div>
  </div>
</div>