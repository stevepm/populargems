<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-10">
      <table class="table table-striped table-hover well">
        <thead>
        <tr>
          <th>Gem</th>
          <th>Comment</th>
        </tr>
        </thead>
        <tbody>
        <% @comments.each do |comment| %>
          <tr class="success">
            <td class=""><strong><%= link_to comment.popular_gem.name, comment.popular_gem %>: </strong></td>
            <td><%= comment.body.html_safe %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>