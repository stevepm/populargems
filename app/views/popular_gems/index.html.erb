<div class="page-header blockquote-reverse">
  <h2><span class="label label-info"><strong>a discovery engine for ruby gems</strong></span></h2>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-default" id="most_downloaded">
        <div class="panel-heading">
          <h3 class="panel-title"><strong>Most downloaded gems</strong>
            <small><%= link_to('View more', most_downloaded_path(page: 2)) %></small>
          </h3>
        </div>
        <div class="panel-body">
          <table class="table table-hover">
            <thead>
            <tr>
              <% if logged_in? %>
                <th>
                </th>
              <% end %>
              <th>
                Gem name
              </th>
              <th>
                Description
              </th>
              <th>
                Total Downloads
              </th>
            </tr>
            </thead>
            <tbody>
            <% @top_downloaded_gems.each do |gem| %>
              <tr class="info">
                <% if logged_in? %>
                  <td>
                    <%= render partial: 'shared/heart_button', locals: {gem: gem} %>
                  </td>
                <% end %>
                <td>
                  <%= link_to "#{gem.name}", gem %>
                </td>
                <td>
                  <%= gem.description %>
                </td>
                <td>
                  <%= number_with_delimiter(gem.total_downloads, :delimiter => ',') %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-default" id="most_hearted">
        <div class="panel-heading">
          <h3 class="panel-title"><strong>Most loved gems</strong>
            <small><%= link_to('View more', most_hearted_path(page: 2)) %></small>
          </h3>
        </div>
        <div class="panel-body">
          <table class="table table-hover">
            <thead>
            <tr>
              <% if logged_in? %>
                <th>
                </th>
              <% end %>
              <th>
                Gem name
              </th>
              <th>
                Description
              </th>
              <th>
                Total Downloads
              </th>
            </tr>
            </thead>
            <tbody>
            <% @top_hearted_gems.each do |gem| %>
              <tr class="info">
                <% if logged_in? %>
                  <td>
                    <%= render partial: 'shared/heart_button', locals: {gem: gem} %>
                  </td>
                <% end %>
                <td>
                  <%= link_to "#{gem.name}", gem %>
                </td>
                <td>
                  <%= gem.description %>
                </td>
                <td>
                  <%= number_with_delimiter(gem.total_downloads, :delimiter => ',') %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>